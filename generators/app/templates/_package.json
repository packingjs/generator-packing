{
  "name": "<%= props.name %>",
  "description": "前端工程 - <%= props.name %>",
  "version": "1.0.0",
  "scripts": {
    "start": "packing serve",
    "start:dist": "packing build && packing serve-dist",
    "build": "packing build -o",
    "build:dev": "NODE_ENV=development packing build",
    "build:beta": "NODE_ENV=beta packing build",
    "build:prod": "NODE_ENV=production packing build",
    "serve": "npm start",
    "serve:dist": "npm run start:dist",
    "stylelint": "stylelint --fix \"src/**/*.(css|less|sass|scss)\"",
    "eslint": "eslint --fix src",
    "lint": "npm run stylelint && npm run eslint"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "babel-preset-stage-0": "^6.24.1",<% if (props.css === 'less') { %>
    "less": "^2.7.2",
    "less-loader": "^4.0.3",<% } if (props.css === 'cssnext') { %>
    "postcss-cssnext": "^3.0.2",<% } if (props.css === 'sass') { %>
    "node-sass": "^4.5.0",
    "sass-loader": "^6.0.0",<% } if (props.react) { %>
    "react": "^16.2.0",
    "react-a11y": "^1.0.0",
    "react-dom": "^16.2.0",
    "redbox-react": "^1.3.3",
    "react-transform-catch-errors": "^1.0.2",<% } if (props.redux) { %>
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",<% } %>
    "packing": "^3.0.0-beta.15"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "express": "^4.16.3",
    "open-browser-webpack-plugin": "^0.0.5",
    "packing-ajax": "^0.0.1",<% if (props.template === 'artTemplate') { %>
    "packing-template-artTemplate": "^1.1.2",<% } if (props.template === 'ejs') { %>
    "packing-template-ejs": "^1.1.1",<% } if (props.template === 'handlebars') { %>
    "packing-template-handlebars": "^1.1.1",<% } if (props.template === 'html') { %>
    "packing-template-html": "^1.1.2",<% } if (props.template === 'pug') { %>
    "packing-template-pug": "^2.0.4",<% } if (props.template === 'smarty') { %>
    "packing-template-smarty": "^1.2.3",<% } if (props.template === 'velocity') { %>
    "packing-template-velocity": "^1.1.2",<% } %>
    "packing-urlrewrite": "^0.1.8",
    "pre-commit": "^1.2.2",<% if (props.redux) { %>
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.2.0",<% } %>
    "standard-version": "^4.3.0",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.22.0"
  },
  "engines": {
    "node": ">=6.11.5",
    "npm": ">=3.0"
  }
}
