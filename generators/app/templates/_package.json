    "babel-plugin-react-transform": "^2.0.2",
    "react": "^15.4.2",
    "react-a11y": "^0.3.3",
    "react-dom": "^15.4.2",
    "redbox-react": "^1.3.3",
    "react-transform-catch-errors": "^1.0.2",<% } if (props.redux) { %>
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",<% } %>
    "packing": "^2.3.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "express": "^4.14.1",
    "open-browser-webpack-plugin": "^0.0.5",<% if (props.template === 'artTemplate') { %>
    "packing-template-artTemplate": "^1.1.2",<% } if (props.template === 'ejs') { %>
